<p>Please fill in our little form</p>
    <form action="" method="post" class="cqn-quote-form">
        <input type="hidden" value="yes" name="cqn_calc_form"/>
        <input type="hidden" name="CQN_calculator_ref" value="{{ sub.getCalculatorRef() }}">

        <h2>Conveyancing type:</h2>

        <div class="form-row">
            <select name="quote_type" id="quote_type" style="width: 100%; padding: .5em;">
                <option value="sale">Sale</option>
                <option value="purchase">Purchase</option>
                <option value="sale_purchase">Sale & Purchase</option>
                <option value="remortgage">Remortgage</option>
                <option value="transfer">Transfer</option>
            </select>
        </div>
        <div class="section_holder" id="sale_details">
            <h2 class="form_title">Sale Details</h2>
            <div class="form-row"><label for="sale_price">Property price</label><input name="sale_price" size="40" type="number" class="required number" value=""></div>
            <div class="form-row checkbox-row"><label for="sale_leasehold">Is the property Leasehold?</label><input name="sale_leasehold" id="sale_leasehold" value="sale_leasehold" type="checkbox"></div>
            <div class="form-row checkbox-row"><label for="sale_mortgage">Is there a mortgage?</label><input name="sale_mortgage" id="sale_mortgage" value="sale_mortgage" type="checkbox"></div>
        </div>
        <div class="section_holder" id="purchase_details" style="display:none;">
            <h2 class="form_title">Purchase Details</h2>
            <div class="form-row"><label for="purchase_price">Property price</label><input value="" name="purchase_price" size="40" type="number" class="required number ignore"></div>
            <div class="form-row checkbox-row"><label for="purchase_leasehold">Is the property Leasehold?</label><input name="purchase_leasehold" id="purchase_leasehold" value="purchase_leasehold" type="checkbox"></div>
            <div class="form-row checkbox-row"><label for="purchase_mortgage">Is there a mortgage?</label><input name="purchase_mortgage" id="purchase_mortgage" value="purchase_mortgage" type="checkbox"></div>
            <div class="form-row checkbox-row"><label for="purchase_1st_time_buyer">1st Time Buyer?</label><input name="purchase_1st_time_buyer" id="purchase_1st_time_buyer" value="purchase_1st_time_buyer" type="checkbox"></div>
            <div class="form-row small-text-input"><label for="purchase_no_of_buyers">No. Of Buyers?</label><input name="purchase_no_of_buyers" id="purchase_no_of_buyers" value="1" type="number" size="2" step="1"  max="10" min="1" class="required number ignore"></div>
        </div>
        <div class="section_holder" id="remortgage_details" style="display:none;">
            <h2 class="form_title">Remortgage Details</h2>
            <div class="form-row"><label for="remortgage_price">Remortgage Value</label><input value="" name="remortgage_price" size="40" type="number" class="required number ignore"></div>
            <div class="form-row checkbox-row"><label for="remortgage_leasehold">Is the property Leasehold?</label><input name="remortgage_leasehold" id="remortgage_leasehold" value="remortgage_leasehold" type="checkbox"></div>
            <div class="form-row small-text-input"><label for="remortgage_no_of_people">No. Of People?</label><input name="remortgage_no_of_people" id="remortgage_no_of_people" value="1" type="text" size="2" class="required digits ignore"></div>
            <div class="form-row checkbox-row"><label for="remortgage_involves_transfer">Involves equity transfer?</label><input name="remortgage_involves_transfer" id="remortgage_involves_transfer" value="remortgage_involves_transfer" type="checkbox"></div>
        </div>
        <div class="section_holder" id="transfer_details" style="display:none;">
        <h2 class="form_title">Transfer Of Equity Details</h2>
            <div class="form-row"><label for="transfer_price">Equity Value</label><input value="" name="transfer_price" size="40" type="number" class="required number ignore"></div>
            <div class="form-row checkbox-row"><label for="transfer_leasehold">Is the property Leasehold?</label><input name="transfer_leasehold" id="transfer_leasehold" value="transfer_leasehold" type="checkbox"></div>
            <div class="form-row small-text-input"><label for="transfer_no_of_people">No. Of People?</label><input name="transfer_no_of_people" id="transfer_no_of_people" value="1" type="number" step="1" max="10"  min="1" class="required digits ignore"></div>
        </div>
        <div class="section_holder" id="save_quote_holder">
            <div class="form-row"><label for="discount_code">Discount Code</label><input value="" name="discount_code" id="discount_code" size="40" type="text" class=""></div>
        </div>
        <div class="section_holder" id="save_quote_holder">
            <div class="form-row"><label for="contact_email">Email address*</label><input name="contact_email" id="contact_email" size="40" type="email" class="required email" value=""></div>
            <div class="form-row"><label for="contact_telephone">Telephone Number*</label><input value="" name="contact_telephone" id="contact_telephone" size="40" type="tel"></div>
            <div class="form-row"><label for="contact_name">Full Name</label><input value="" name="contact_name" id="contact_name" size="40" type="text"></div>
            <div class="form-row"><input type="submit" id="form-submit" value="Calculate"></div>
            <div class="form-row"><div class="privacy"><span>*</span>We fully respect your privacy. We will not share your email or other information with any third party.</div></div>
        </div>
    </form>